  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'pry-rails'
  gem 'pry'
  gem 'pry-doc'
end

group :test, :development do
  gem "rspec-rails", "~> 2.6"
end

group :test do
  gem 'cucumber-rails'
  gem 'database_cleaner'
end

gem 'jquery-rails'
gem 'markdownizer'
gem 'bourbon'
gem 'devise'

